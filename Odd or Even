#include <stdio.h>

int main() {
    int n, i, num;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    for (i = 1; i <= n; i++) {
        printf("Enter number %d: ", i);
        scanf("%d", &num);

        if (num % 2 == 0)
            printf("%d is Even\n", num);
        else
            printf("%d is Odd\n", num);
    }

    return 0;
}


Output
Enter number of elements: 3
Enter number 1: 5
5 is Odd
Enter number 2: 10
10 is Even
Enter number 3: 7
7 is Odd
