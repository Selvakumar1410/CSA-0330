#include <stdio.h>
#define INF 999

int parent[10];

int find(int i) {
    while (parent[i])
        i = parent[i];
    return i;
}

void unionSet(int i, int j) {
    parent[j] = i;
}

int main() {
    int n, cost[10][10];
    int i, j, ne = 1, min, a, b, u, v, mincost = 0;

    printf("Enter number of vertices: ");
    scanf("%d", &n);

    printf("Enter cost matrix:\n");
    for (i = 0; i < n; i++)
        for (j = 0; j < n; j++) {
            scanf("%d", &cost[i][j]);
            if (cost[i][j] == 0)
                cost[i][j] = INF;
        }

    while (ne < n) {
        min = INF;
        for (i = 0; i < n; i++)
            for (j = 0; j < n; j++)
                if (cost[i][j] < min) {
                    min = cost[i][j];
                    a = u = i;
                    b = v = j;
                }

        u = find(u);
        v = find(v);

        if (u != v) {
            unionSet(u, v);
            printf("Edge %d: (%d %d) cost: %d\n", ne++, a, b, min);
            mincost += min;
        }
        cost[a][b] = cost[b][a] = INF;
    }

    printf("Minimum cost = %d", mincost);
    return 0;
}
