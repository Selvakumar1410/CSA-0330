#include <stdio.h>
#define INF 999

int main() {
    int n, cost[10][10], visited[10] = {0};
    int i, j, ne = 1, min, a, b, u, v, mincost = 0;

    printf("Enter number of vertices: ");
    scanf("%d", &n);

    printf("Enter cost matrix:\n");
    for (i = 0; i < n; i++)
        for (j = 0; j < n; j++) {
            scanf("%d", &cost[i][j]);
            if (cost[i][j] == 0)
                cost[i][j] = INF;
        }

    visited[0] = 1;

    while (ne < n) {
        min = INF;
        for (i = 0; i < n; i++)
            for (j = 0; j < n; j++)
                if (visited[i] && cost[i][j] < min) {
                    min = cost[i][j];
                    a = u = i;
                    b = v = j;
                }

        if (!visited[v]) {
            printf("Edge %d: (%d %d) cost: %d\n", ne++, a, b, min);
            mincost += min;
            visited[v] = 1;
        }
        cost[a][b] = cost[b][a] = INF;
    }

    printf("Minimum cost = %d", mincost);
    return 0;
}
